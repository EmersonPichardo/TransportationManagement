@model IEnumerable<TransportationManagement.Web.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChassisNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehiclesTypesDescriptionNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChassisNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehiclesTypesDescriptionNavigation.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LicensePlate">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LicensePlate">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LicensePlate">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
